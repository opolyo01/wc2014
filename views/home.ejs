<div id="container">
	<header>
		Welcome, <%= user.name %>! 
		<a href="/logout" class="logout">logout </a>
		<% if(user.admin == "true") { %>
			<a href="/admin" class="admin">Admin</a>
		<% } %>
	</header>
	
	<div id="tabs">
		<ul class="nav nav-tabs">
			<li class="active"><a href="#scores" data-toggle="tab">Scores</a></li>
			<li><a href="#standings" data-toggle="tab">Standings</a></li>
			<li><a href="#chat" data-toggle="tab">Chat</a></li>
		</ul>
		<div class="tab-content">
			<div class="tab-pane active" id="scores"><%- include scores %></div>
			<div class="tab-pane fade" id="standings"><%- include standings %></div>
			<div class="tab-pane fade" id="chat"><%- include chatroom %></div>
		</div>
	</div>
</div>


<script src="js/index.js"></script>